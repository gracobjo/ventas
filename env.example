# 🚀 Sistema E-Commerce AI Analytics - Variables de Entorno
# Copia este archivo como .env y configura las variables según tu entorno

# =============================================================================
# CONFIGURACIÓN DEL BACKEND
# =============================================================================

# Configuración de FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=info

# Configuración de la base de datos
DATABASE_URL=sqlite:///app/data/ecommerce.db
DATABASE_ECHO=false

# Configuración de PySpark
SPARK_MASTER=local[*]
SPARK_APP_NAME=ECommerceAnalytics
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Configuración de datos
DATA_DIR=app/data
MODELS_DIR=app/models
SYNTHETIC_DATA_SIZE=10000

# Configuración de ML
FORECAST_PERIODS=6
RECOMMENDATION_TOP_K=10
MODEL_SAVE_INTERVAL=3600

# =============================================================================
# CONFIGURACIÓN DEL FRONTEND
# =============================================================================

# Configuración de React
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Configuración de desarrollo
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# =============================================================================
# CONFIGURACIÓN DE DOCKER
# =============================================================================

# Configuración de servicios
BACKEND_PORT=8000
FRONTEND_PORT=3000
SPARK_MASTER_PORT=7077
SPARK_WORKER_PORT=8081

# Configuración de volúmenes
DATA_VOLUME=./data
MODELS_VOLUME=./models
LOGS_VOLUME=./logs

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Claves secretas (¡CAMBIA ESTAS EN PRODUCCIÓN!)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# CONFIGURACIÓN DE LOGS
# =============================================================================

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Métricas y monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Configuración de alertas
ALERT_EMAIL=admin@example.com
ALERT_WEBHOOK=https://hooks.slack.com/services/your-webhook

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Configuración de desarrollo
DEBUG=true
ENVIRONMENT=development
ENABLE_HOT_RELOAD=true

# Configuración de testing
TEST_DATABASE_URL=sqlite:///test.db
TEST_DATA_SIZE=1000

# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN
# =============================================================================

# Configuración de producción (descomenta y configura para producción)
# ENVIRONMENT=production
# DEBUG=false
# ENABLE_HOT_RELOAD=false
# SECRET_KEY=your-super-secure-production-secret-key
# DATABASE_URL=postgresql://user:password@host:port/database
# ALLOWED_ORIGINS=https://yourdomain.com

