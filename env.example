ALERT_WEBHOOK=https://hooks.slack.com/services/your-webhook

# =============================================================================
# CONFIGURACIN DE DESARROLLO
# =============================================================================

# Configuraci贸n de desarrollo
DEBUG=true
ENVIRONMENT=development
ENABLE_HOT_RELOAD=true

# Configuraci贸n de testing
