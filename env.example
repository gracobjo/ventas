#  Sistema E-Commerce AI Analytics - Variables de Entorno
# Copia este archivo como .env y configura las variables seg煤n tu entorno

# =============================================================================
# CONFIGURACIN DEL BACKEND
# =============================================================================

# Configuraci贸n de FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true
FASTAPI_LOG_LEVEL=info

# Configuraci贸n de la base de datos
DATABASE_URL=sqlite:///app/data/ecommerce.db
DATABASE_ECHO=false

# Configuraci贸n de PySpark
SPARK_MASTER=local[*]
SPARK_APP_NAME=ECommerceAnalytics
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g

# Configuraci贸n de datos
DATA_DIR=app/data
MODELS_DIR=app/models
SYNTHETIC_DATA_SIZE=10000

# Configuraci贸n de ML
FORECAST_PERIODS=6
RECOMMENDATION_TOP_K=10
MODEL_SAVE_INTERVAL=3600

# =============================================================================
# CONFIGURACIN DEL FRONTEND
# =============================================================================

# Configuraci贸n de React
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Configuraci贸n de desarrollo
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=info

# =============================================================================
# CONFIGURACIN DE DOCKER
# =============================================================================

# Configuraci贸n de servicios
BACKEND_PORT=8000
FRONTEND_PORT=3000
SPARK_MASTER_PORT=7077
SPARK_WORKER_PORT=8081

# Configuraci贸n de vol煤menes
DATA_VOLUME=./data
MODELS_VOLUME=./models
LOGS_VOLUME=./logs

# =============================================================================
# CONFIGURACIN DE SEGURIDAD
# =============================================================================

# Claves secretas (隆CAMBIA ESTAS EN PRODUCCIN!)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuraci贸n de CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# CONFIGURACIN DE LOGS
# =============================================================================

# Configuraci贸n de logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# CONFIGURACIN DE MONITOREO
# =============================================================================

# M茅tricas y monitoreo
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Configuraci贸n de alertas
